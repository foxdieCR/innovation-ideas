{
  "name": "innovation-ideas",
  "version": "1.0.0",
  "description": "App to add ideas and rate them.",
  "main": "index.js",
  "engineStrict": true,
  "engines": {
    "node": ">=11.9.0"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "eslint": "eslint .",
    "format": "npm run prettier -- --write",
    "prettier": "prettier \"**/*.+(js|jsx|json|yml|yaml|css|less|scss|ts|tsx|md|graphql|mdx)\"",
    "validate": "npm run lint && npm run prettier -- --list-different"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "validate-commit-msg"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/foxdieCR/innovation-ideas.git"
  },
  "private": true,
  "author": "Emmanuel Alfaro",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/foxdieCR/issues"
  },
  "homepage": "https://github.com/foxdieCR/innovation-ideas#readme",
  "dependencies": {},
  "devDependencies": {
    "babel-eslint": "9.0.0",
    "commitizen": "^3.0.7",
    "cz-conventional-changelog-emoji": "^0.1.0",
    "eslint": "5.6.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^4.0.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jest": "^22.4.1",
    "eslint-plugin-jsx-a11y": "^6.2.0",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.12.4",
    "husky": "^1.3.1",
    "jest": "^24.5.0",
    "lerna": "^3.10.7",
    "lint-staged": "^8.1.5",
    "msg": "^1.0.0",
    "prettier": "^1.16.3",
    "validate-commit-msg": "^2.14.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog-emoji"
    }
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ]
}
